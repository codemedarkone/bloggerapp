<p class="flash"><%= notice %></p>

<h1><%= @article.title %></h1>
  <p><%= @article.body %></p>
  <h3>Comments (<%= @article.comments.size %>)</h3>
  
  <p><%= render partial: 'articles/comment', collection: @article.comments %></p>

<ul>
<li><%= link_to "Edit", edit_article_path(@article) %></li>
<li><%= link_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure?" } %></li>


<%= render partial: 'comments/form' %>

<li><%= link_to "<< Back to Articles List", articles_path %></li>
</ul>